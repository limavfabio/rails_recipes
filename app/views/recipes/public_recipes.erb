<div class="w-[100%] flex flex-col justify-center items-center gap-4">
  <h2 class="self-center text-2xl font-bold">Public Recipe</h2>
  <ul class="border-2 border-slate-800 w-[80%] rounded ">
    <% @recipes.each do |recipe| %>
      <li class="bg-blue-200">
        <div class="md:flex md:flex-rows p-4">
          <div class="md:w-1/4 font-medium">
            <h2 class="text-2xl text-gray-900">
              <a href="/recipes/<%= recipe.id %>"> <%= recipe.name %> </a>
            </h2>
              By: <span class="author-name"><%= recipe.user.name %></span>
          </div>
          <div class="md:w-3/4 items-end justify-end text-sm">
            <p class="text-gray-500 ml-4"> <%= recipe.description %> </p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>