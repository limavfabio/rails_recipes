<p style="color: green"><%= notice %></p>

<div class="w-full flex justify-center">
<div class="w-[50%] flex flex-col justify-center items-center py-10 gap-8">
<h1 class="text-2xl font-bold">FOODS</h1>
<%= link_to "New food", new_food_path, class: "bg-[#13b8a6] p-2 rounded-md text-white" %>
<div id="foods" class="w-full flex flex-col gap-8">
  <% @foods.each do |food| %>
  <div class="bg-blue-200 w-full p-4 flex flex-col rounded-md shadow-md">
    <%= render food %>
    <div class="flex justify-center items-center">
      <%= button_to "Destroy this food", food, method: :delete, class: "bg-red-600 p-2 text-white rounded-md shadow-md"%>
      </div>
     </div>
  <% end %>
</div>

</div>
</div>